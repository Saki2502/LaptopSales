@model LaptopSales13.Models.Account

@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/Layout/_Index.cshtml";
}

@{
    var u = Session["use"] as LaptopSales13.Models.Account;
}

@using (Html.BeginForm("EditProfile", "Customer", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <!-- Breadcrumb -->
    <nav class="flex-fill">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("MyProfile", "Customer")">Thông tin tài khoản</a></li>
            <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa hồ sơ</li>
        </ol>
    </nav>
    <!-- Breadcrumb -->

    <section class="section-content padding-y">
        <header class="section-heading">
            <h2 class="section-title">Hồ sơ của tôi</h2>
        </header><!-- sect-heading -->
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-xl-3">
                    <nav class="nav flex-lg-column w-100 d-flex nav-pills mb-4">
                        <a class="nav-link my-0 bg-light" href="/Customer/MyProfile"><p class="pb-0 mb-0" style="width: 100px">Hồ sơ</p></a>
                        <a class="nav-link my-0 active" href="/Customer/EditProfile"><p class="pb-0 mb-0" style="width: 120px">Chỉnh sửa hồ sơ</p></a>
                        <a class="nav-link my-0 bg-light" href="#"><p class="pb-0 mb-0" style="width: 100px">Đổi mật khẩu</p></a>
                        <a class="nav-link my-0 bg-light" href="/Account/LogOut"><p class="pb-0 mb-0" style="width: 100px">Đăng xuất</p></a>
                    </nav>
                </div>

                <main class="col-lg-9 col-xl-9">
                    <div class="card p-4 mb-0 shadow-0 border">
                        <div class="content-body">

                            <form>
                                <div class="row">
                                    @{ if (u != null)
                                        {
                                            <div class="col-12 mb-3">
                                                <p class="mb-0">Tên đăng nhập: @u.UserName</p>
                                            </div>

                                            <div class="col-6 mb-3">
                                                <p class="mb-0">Họ và tên đệm</p>
                                                <div class="form-outline">
                                                    <input type="text" id="typeText" name="firstName" class="form-control" value="@u.FirstName" />
                                                </div>
                                            </div>

                                            <div class="col-6 mb-3">
                                                <p class="mb-0">Tên</p>
                                                <div class="form-outline">
                                                    <input type="text" id="typeText" name="lastName" class="form-control" value="@u.LastName" />
                                                </div>
                                            </div>

                                            <div class="col-6 mb-3">
                                                <p class="mb-0">Số điện thoại</p>
                                                <div class="form-outline">
                                                    <input type="tel" id="typePhone" name="phone" value="+84 " class="form-control" value="@u.PhoneNumber" />
                                                </div>
                                            </div>

                                            <div class="col-6 mb-3">
                                                <p class="mb-0">Email</p>
                                                <div class="form-outline">
                                                    <input type="email" id="typeEmail" name="email" value="@u.Email" class="form-control" />
                                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="col-12 mb-3">
                                                <p class="mb-0">Địa chỉ</p>
                                                <div class="form-outline">
                                                    <input type="text" id="typeAddress" name="address" class="form-control" value="@u.Address" />
                                                </div>
                                            </div>
                                        }
                                    }

                                </div>
                                <div>
                                    <button type="submit" style="line-height: 2; width: 20%" class="btn btn-danger shadow-0 border">Lưu</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </main>
            </div>
        </div>
    </section>

}
