<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="pragma" content="no-cache" />
    <meta http-equiv="cache-control" content="max-age=604800" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="author" content="Pasokon">

    <title>Pasokon - Thế giới laptop</title>

    <link href="~/Content/images/favicon.ico" rel="shortcut icon" type="image/x-icon">

    <!-- jQuery -->
    <script src="~/Content/js/jquery-2.0.0.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>

    <!-- Bootstrap4 files-->
    <script src="~/Content/js/bootstrap.bundle.min.js" type="text/javascript"></script>
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" type="text/css" />

    <!-- Font awesome 5 -->
    <link href="~/Content/fonts/fontawesome/css/all.min.css" type="text/css" rel="stylesheet">

    <!-- custom style -->
    <link href="~/Content/css/ui.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/style.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/responsive.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/jquery-ui.css" rel="stylesheet" />

    <!-- custom javascript -->
    <script src="~/Content/js/script.js" type="text/javascript"></script>
    <script src="~/Content/js/jquery-ui.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#keyword').autocomplete({
                source: '@Url.Action("Search", "Product")'
            });
        });
    </script>

    @using LaptopSales13.Models

</head>
<body>
    @{
        var u = Session["use"] as LaptopSales13.Models.Account;
    }

    <header class="section-header">
        <section class="header-main border-bottom" style="background-color: cornsilk!important">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-xl-2 col-lg-3 col-md-12">
                        <a href="@Url.Action("Index", "Home")" class="brand-wrap">
                            <img class="logo" src="~/Content/images/logo.png">
                        </a> <!-- brand-wrap.// -->
                    </div>
                    <div class="col-xl-6 col-lg-5 col-md-6">
                        <form action="/search" class="search-header" method="get">
                            <div class="input-group w-100">
                                @using (Html.BeginForm("Index", "Product", FormMethod.Get))
                                {   
                                    <input type="text" id="keyword" name="keyword" value="@ViewBag.keyword" class="form-control" placeholder="Nhập tên sản phẩm, từ khóa cần tìm">

                                    <div class="input-group-append">
                                        <button class="btn btn-primary" type="submit">
                                            <i class="fa fa-search"></i> Search
                                        </button>
                                    </div>
                                }
                            </div>
                        </form> <!-- search-wrap .end// -->
                    </div> <!-- col.// -->
                    <div class="col-xl-4 col-lg-4 col-md-6">
                        <div class="widgets-wrap float-md-right">
                            @{
                                if (u != null)
                                {
                                    <div class="widget-header mr-3 dropdown">
                                        <a href="#" class="widget-view" data-toggle="dropdown" aria-expanded="false">
                                            <div class="icon-area">
                                                <i class="fa fa-user"></i>
                                                @*<span class="notify">3</span>*@
                                            </div>
                                            <small class="text"> Hi, @u.UserName </small>
                                        </a>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" href="/Customer/MyProfile">Thông tin cá nhân</a>
                                            <a class="dropdown-item" href="/Order/Index">Đơn hàng của tôi</a>

                                            <hr class="dropdown-divider">

                                            <a class="dropdown-item" href="/Account/LogOut">Đăng xuất</a>
                                        </div>
                                        @*@Html.ActionLink("ĐĂNG XUẤT", "DangXuat", "User", new { style = "color:red" })*@
                                        @*<a style="color:red" href="/Account/LogOut"> ĐĂNG XUẤT</a>*@
                                    </div>
                                }
                                else
                                {
                                    <div class="widget-header mr-3">
                                        <a href="@Url.Action("LogIn", "Account")" class="widget-view">
                                            <div class="icon-area">
                                                <i class="fa fa-user"></i>
                                                @*<span class="notify">3</span>*@
                                            </div>
                                            <small class="text"> Tài khoản </small>
                                        </a>
                                    </div>
                                }
                            }

                            @*<div class="widget-header mr-3">
                                <a href="#" class="widget-view">
                                    <div class="icon-area">
                                        <i class="fa fa-comment-dots"></i>
                                        <span class="notify">1</span>
                                    </div>
                                    <small class="text"> Tin nhắn </small>
                                </a>
                            </div>*@
                            <div class="widget-header mr-3">
                                <a href="#" class="widget-view">
                                    <div class="icon-area">
                                        <i class="fa fa-store"></i>
                                    </div>
                                    <small class="text"> Đơn hàng </small>
                                </a>
                            </div>
                            <div class="widget-header">
                                <a href="@Url.Action("Index", "Cart")" class="widget-view">
                                    <div class="icon-area">
                                        <i class="fa fa-shopping-cart"></i>
                                    </div>
                                    <small class="text"> Giỏ hàng </small>
                                </a>
                            </div>
                        </div> <!-- widgets-wrap.// -->
                    </div> <!-- col.// -->
                </div> <!-- row.// -->
            </div> <!-- container.// -->
        </section> <!-- header-main .// -->


        <nav class="navbar navbar-main navbar-expand-lg border-bottom">
            <div class="container">

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main_nav" aria-controls="main_nav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="main_nav">
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#"> <i class="fa fa-bars text-muted mr-2"></i> Danh mục </a>
                            <div class="dropdown-menu">
                                @Html.Action("CategoryPartial", "Category")
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Hướng dẫn giao hàng</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Hướng dẫn thanh toán</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Chính sách bảo hành</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ml-md-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="http://example.com" data-toggle="dropdown">English</a>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" href="#">Russian</a>
                                <a class="dropdown-item" href="#">French</a>
                                <a class="dropdown-item" href="#">Spanish</a>
                                <a class="dropdown-item" href="#">Chinese</a>
                            </div>
                        </li>
                    </ul>
                </div> <!-- collapse .// -->
            </div> <!-- container .// -->
        </nav>
    </header> <!-- section-header.// -->
    <div class="container">
        @RenderBody()
    </div>
    <!-- ========================= FOOTER ========================= -->
    <footer class="section-footer border-top" style="background-color: #F8F6F4!important">
        <div class="container">
            <section class="footer-top  padding-y">
                <div class="row">
                    <aside class="col-md-4 col-12">
                        <article class="mr-md-4">
                            <h5 class="title">Về Pasokon</h5>
                            <p>Pasokon - Thiên đường của Laptop</p>
                            <ul class="list-icon">
                                <li> <i class="icon fa fa-map-marker"> </i>371 Nguyễn Kiệm, Phường 3, Gò Vấp, Hồ Chí Minh </li>
                                <li> <i class="icon fa fa-envelope"> </i> pasokon@gmail.com</li>
                                <li> <i class="icon fa fa-phone"> </i> (800) 060-0730</li>
                                <li> <i class="icon fa fa-clock"> </i>Thứ hai - Thứ bảy 08:00am - 10:00pm</li>
                            </ul>
                        </article>
                    </aside>
                    <aside class="col-md col-6">
                        <h5 class="title">Hỗ trợ khách hàng</h5>
                        <ul class="list-unstyled">
                            <li> <a href="#">Hướng dẫn mua hàng online</a></li>
                            <li> <a href="#">Hướng dẫn thanh toán</a></li>
                            <li> <a href="#">Hướng dẫn mua hàng trả góp</a></li>
                            <li> <a href="#">Góp ý, khiếu nại</a></li>
                        </ul>
                    </aside>
                    <aside class="col-md col-6">
                        <h5 class="title">Chính sách chung</h5>
                        <ul class="list-unstyled">
                            <li> <a href="#">Chính sách giao hàng</a></li>
                            <li> <a href="#">Chính sách bảo hành</a></li>
                            <li> <a href="#">Chính sách thanh toán</a></li>
                            <li> <a href="#">Chính sách bảo mật</a></li>
                        </ul>
                    </aside>
                    <aside class="col-md-4 col-12">
                        <h5 class="title">Thông tin khuyến mãi</h5>
                        <p>Đăng ký nhận các thông tin khuyến mãi về laptop</p>

                        <form class="form-inline mb-3">
                            <input type="text" placeholder="Email" class="form-control" name="">
                            <button class="btn ml-2 btn-warning">Đăng ký</button>
                        </form>

                        <p class="text-white-50 mb-2">Follow us on social media</p>
                        <div>
                            <a href="#" class="btn btn-icon btn-light"><i class="fab fa-facebook-f"></i></a>
                            <a href="#" class="btn btn-icon btn-light"><i class="fab fa-twitter"></i></a>
                            <a href="#" class="btn btn-icon btn-light"><i class="fab fa-instagram"></i></a>
                            <a href="#" class="btn btn-icon btn-light"><i class="fab fa-youtube"></i></a>
                        </div>

                    </aside>
                </div>
                <!-- row.// -->
            </section>
            <!-- footer-top.// -->

            <section class="footer-bottom border-top row">
                <div class="col-md-6">
                    <p class="mb-0">&copy @DateTime.Now.Year Pasokon, All rights reserved</p>
                </div>
                <div class="col-md-6 text-md-right">
                    <i class="fab fa-lg fa-cc-visa"></i>
                    <i class="fab fa-lg fa-cc-paypal"></i>
                    <i class="fab fa-lg fa-cc-mastercard"></i>
                </div>
            </section>
        </div>
        <!-- //container -->
    </footer>
    <!-- ========================= FOOTER END // ========================= -->

</body>
</html>