@model  List<LaptopSales13.Models.OrderDetail>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Layout/_Index.cshtml";
}

<!-- Breadcrumb -->
<nav class="flex-fill">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Order")">Đơn hàng</a></li>
        <li class="breadcrumb-item active" aria-current="page">Chi tiết đơn hàng</li>
    </ol>
</nav>
<!-- Breadcrumb -->

<section class="h-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-10 col-xl-8">
                <div class="card" style="border-radius: 10px;">
                    <div class="card-header px-4 py-5">
                        <h3 class="text-muted mb-2">Chi tiết đơn hàng</h3>
                        @*@Html.ActionLink("Xuất hóa đơn", "ExportOrderListing")*@

                    </div>
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <p class="lead fw-normal mb-0" style="color: #a8729a;">Sản phẩm</p>
                        </div>
                        @foreach (var i in Model)
                        {
                            <div class="card shadow-0 border mb-4">

                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <img src="@Url.Content(i.Product.ImageURL)"
                                                 class="img-fluid" alt="@i.Product.ProductName">
                                        </div>
                                        <div class="col-md-3 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0">@i.Product.ProductName</p>
                                        </div>
                                        <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0 small">@i.Product.Brand.BrandName</p>
                                        </div>
                                        <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0 small">@i.Quantity</p>
                                        </div>
                                        <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0 small">@(String.Format("{0:N0}", i.Quantity * i.UnitPrice))&#8363;</p>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        }
                        @*<div class="d-flex justify-content-between pt-2">
                                <p class="fw-bold mb-0">Chi tiết</p>
                                <p class="text-muted mb-0"><span class="fw-bold me-4">Tổng tiền</span> @(String.Format("{0:N0}", ViewBag.Total))&#8363;</p>
                            </div>

                            <div class="d-flex justify-content-between pt-2">
                                <p class="text-muted mb-0">Mã đơn : </p>
                                <p class="text-muted mb-0"><span class="fw-bold me-4">Discount</span> 0</p>
                            </div>

                            <div class="d-flex justify-content-between">
                                <p class="text-muted mb-0">Ngày đặt : 22 Dec,2019</p>
                                <p class="text-muted mb-0"><span class="fw-bold me-4">GST 18%</span> 123</p>
                            </div>

                            <div class="d-flex justify-content-between mb-5">
                                <p class="text-muted mb-0">Recepits Voucher : 18KU-62IIK</p>
                                <p class="text-muted mb-0"><span class="fw-bold me-4">Delivery Charges</span> Free</p>
                            </div>*@
                    </div>
                    <div class="card-footer border-0 px-4 py-5"
                         style="background-color: #a8729a; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
                        <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">
                            Tổng tiền: @*<span class="h2 mb-0 ms-2">@(String.Format("{0:N0}", ViewBag.Total))*@&#8363;</span>
                        </h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

